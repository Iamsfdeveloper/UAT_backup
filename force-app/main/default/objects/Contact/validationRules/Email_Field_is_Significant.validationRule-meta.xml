<?xml version="1.0" encoding="UTF-8"?>
<ValidationRule xmlns="http://soap.sforce.com/2006/04/metadata">
    <fullName>Email_Field_is_Significant</fullName>
    <active>true</active>
    <errorConditionFormula>AND(ISBLANK(Email),Not(ISBLANK(npe01__AlternateEmail__c)))</errorConditionFormula>
    <errorDisplayField>Email</errorDisplayField>
    <errorMessage>Please enter the value in Email Field</errorMessage>
</ValidationRule>
