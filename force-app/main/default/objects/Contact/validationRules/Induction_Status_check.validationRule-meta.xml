<?xml version="1.0" encoding="UTF-8"?>
<ValidationRule xmlns="http://soap.sforce.com/2006/04/metadata">
    <fullName>Induction_Status_check</fullName>
    <active>false</active>
    <description>If Induction is checked then Induction Date will be required field</description>
    <errorConditionFormula>AND ( Induction__c = TRUE, ISBLANK( Induction_Date__c ))</errorConditionFormula>
    <errorDisplayField>Induction_Date__c</errorDisplayField>
    <errorMessage>Please Enter Induction Date</errorMessage>
</ValidationRule>
